                    <td class="committee">
                    <td><a class="issue" target="knesset"></a>
                    <td class="subjects">
                        <select class="add">
                            <option>הוסף</option>
                        </select>
                        <span class="subject">
                            <span class="title"></span>
                            <input class="del" type="button" value="הסר" />
                            </label>
                        </span>
    </table>
    </div>
</form>
